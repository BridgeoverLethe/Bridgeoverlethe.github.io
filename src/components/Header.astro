	---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<div>
		<h1>
			{SITE_TITLE}
		</h1>

		<nav class="headernav">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="https://github.com/BridgeoverLethe" target="_blank">GitHub</HeaderLink>
		</nav>
	</div>
</header>
<style>
	header {
		text-align: center;
		margin: 0em 0.5rem;
		background-color: #08255D; 
		width: 100%;
		}
	h1 {
		margin: 0.4em 0;
		color: #edf1f8;
		padding: 0%;
	}
	Nav {
		text-align: center;
		margin: 0em 0 1em;
		color: #ffffff;
	}
	a {
		color: #ffffff;
		}

</style>
